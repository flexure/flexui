{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "dist",
		"module": "esnext",
		"target": "es5",
		"lib": ["es6", "dom", "es2016", "es2017"],
		"sourceMap": true,
		"jsx": "react",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"paths": {
			"@flexure/base-ui": ["../base-ui/src"],
			"@flexure/common": ["../common/src"]
		}
	},

	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
